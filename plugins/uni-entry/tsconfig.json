{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "src/**/*.json"
  ]
}